[
  {
    "id": "names-api",
    "backoffFactor": 2.0,
    "backoffSeconds": 30,
    "container": {
      "docker": {
        "forcePullImage": true,
        "image": "0x06065a/jpoint2017-names-api:5",
        "network": "BRIDGE",
        "parameters": [
          {
            "key": "memory",
            "value": "500m"
          }
        ],
        "portMappings": [
          {
            "containerPort": 8080
          }
        ],
        "privileged": false
      },
      "type": "DOCKER"
    },
    "cpus": 0.1,
    "healthChecks": [
      {
        "gracePeriodSeconds": 300,
        "ignoreHttp1xx": false,
        "intervalSeconds": 5,
        "maxConsecutiveFailures": 3,
        "path": "/health",
        "portIndex": 0,
        "protocol": "HTTP",
        "timeoutSeconds": 10
      }
    ],
    "env": {
      "spring.application.name": "names-api",
      "eureka.instance.appname": "names-api",

      "eureka.client.serviceUrl.defaultZone": "http://{{ ansible_eth1.ipv4.address }}:31500/eureka",
      "eureka.client.healthcheck.enabled": "true",

      "eureka.instance.ipAddress": "{{ ansible_eth1.ipv4.address }}",
      "eureka.instance.preferIpAddress": "true",
      "eureka.instance.leaseRenewalIntervalInSeconds": "5",

      "JAVA_OPTS": "-Xmx400m",
      "management.security.enabled": "false"
    },
    "labels": {
      "DEPLOYMENT_ID": "{{ ansible_date_time.iso8601_micro | to_uuid }}",
    },
    "instances": 2,
    "maxLaunchDelaySeconds": 86400,
    "mem": 512.0,
    "upgradeStrategy": {
      "maximumOverCapacity": 0.5,
      "minimumHealthCapacity": 1.0
    }
  }
]
